{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Discord Bot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Run Bot (Direct)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/core/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Test Full System",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/tests/test_full_system.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        }
    ]
}
